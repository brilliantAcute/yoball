<view class='select_box'>
    <view class='select' catchtap='selectTap'>
        <text class='select_text'>{{selectData[index].gymName}}{{selectData[index].gymDistance}}</text>
        <image class='select_img {{selectShow&&"select_img_rotate"}}' src='../../images/b2.png'  background-size="contain"></image> 
    </view>
    <view wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>
      <view class='option_box' style='height:{{selectShow?(selectData.length>5?325:selectData.length*50):0}}rpx;'>
        <text class='option' >{{item.gymName}}{{item.gymDistance}}</text>
      </view>
      <view wx:for='{{selectUser}}' wx:key='this'>
        <view class="page-item vc" bindtap="userClick">
          <view class="vc">
              <image src="/images/user1.png" mode="scaleToFill" class="p-icon" />
          </view>
          <view class="item-name">{{item.userName}}</view>
          <view class="vc">
              <image src="/images/icon_rightgo.png" mode="scaleToFill" class="p-icon" />
          </view>
        </view> 
      </view>
    </view>
</view>
